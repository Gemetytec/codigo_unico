<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        tools:context=".RecibirEntradas">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="LISTADO ENTRADAS"
        android:textColor="@color/black"

        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ent/List"
        android:textColor="#A8FFFFFF"
        android:textSize="09sp"
        android:textStyle=""
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se mostraran los folios de \n entrada pendientes por ingresar."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12.5sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Constr_Items"
            android:layout_width="301dp"
            android:layout_height="304dp"
            android:layout_marginTop="25dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Constr_Buscador">
            <!-- android:background="@drawable/borde_redondo" -->


            <HorizontalScrollView
                android:layout_width="297dp"
                android:layout_height="304dp"
                android:background="@drawable/borde_redondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!--android:background="@drawable/borde_redondo" -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="450dp"
                        android:layout_height="20dp"
                        android:background="@drawable/borde_redondo_superior"
                        android:translationZ="10dp">

                        <TextView
                            android:id="@+id/LblFolio"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Folio"
                            android:textAlignment="center"
                            android:textColor="#393C3C"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblFactura"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Factura"
                            android:textAlignment="center"
                            android:textColor="#393C3C"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblOrigen"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Origen"
                            android:textAlignment="center"
                            android:textColor="#393C3C"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblCantidad"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Cantidad"
                            android:textAlignment="center"
                            android:textColor="#393C3C"
                            android:textSize="14sp" />


                    </TableRow>

                    <ListView
                        android:id="@+id/lista_entradas"
                        android:layout_width="match_parent"
                        android:layout_height="284dp"
                        android:layout_centerHorizontal="false"
                        android:background="@drawable/borde_redondo_inferior"

                        android:dividerHeight="1dp"
                        android:headerDividersEnabled="false"
                        android:textSize="15sp"
                        android:translationY="0dp"
                        android:translationZ="-10dp" />
                    <!--android:divider="@null" -->
                </LinearLayout>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="#F1000F"
            android:textSize="15sp"
            android:textStyle=""

            app:layout_constraintStart_toStartOf="@+id/Constr_Items"
            app:layout_constraintTop_toBottomOf="@+id/Constr_Items" />


    </androidx.constraintlayout.widget.ConstraintLayout>




         <ImageView
             android:id="@+id/ButtonVolver"
             android:layout_width="110dp"
             android:layout_height="50dp"
             android:background="@drawable/sombra_pressed_boton_atras"
             android:onClick="atras"
             android:layout_marginBottom = "40dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:srcCompat="@drawable/boton_regresar" />

         <TextView
             android:id="@+id/txt_version"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="  Edición 1.0.2 – por Gemetytec"
             android:textColor="#607ef5"

             android:textSize="12sp"
             android:textStyle="bold"
             android:layout_marginBottom="05dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent" />


     </androidx.constraintlayout.widget.ConstraintLayout>