<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        tools:context=".RecibirEntradas">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="RECIBIR ENTRADAS"
        android:textColor="@color/black"

        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ent/List/Rec"
        android:textColor="#A9FFFFFF"
        android:textSize="09sp"
        android:textStyle=""
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se validan los productos de \n la entrada pendiente."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12.5sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />




    <ScrollView
        android:id="@+id/scrollViewPantalla"
        android:layout_width="0dp"
        android:layout_height="330dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:isScrollContainer="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Constr_Datos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="1dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fólio: "
                        android:textColor="#050505"/>

                    <TextView
                        android:id="@+id/txt_FolioPadre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="E22-000003" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    app:layout_constraintStart_toEndOf="@+id/linearLayout2">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Factura: "
                        android:textColor="#050505"/>

                    <TextView
                        android:id="@+id/txt_Factura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Origen: "
                        android:textColor="#050505"/>

                    <TextView
                        android:id="@+id/txt_Origen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ORIGEN TRES" />
                </LinearLayout>








            </androidx.constraintlayout.widget.ConstraintLayout>




            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Productos"
                android:textColor="#F1000F"
                android:textSize="15sp"
                android:textStyle=""
                app:layout_constraintBottom_toTopOf="@+id/Constr_Items"
                app:layout_constraintStart_toStartOf="@+id/Constr_Items" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Constr_Items"
                android:layout_width="300dp"
                android:layout_height="290.5dp"
                android:layout_marginTop="25dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Constr_Datos">



                <HorizontalScrollView
                    android:id="@+id/scrollViewProd"
                    android:layout_width="297dp"
                    android:layout_height="290.5dp"
                    android:background="@drawable/borde_redondo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                            <TableRow
                                android:id="@+id/tabl_product"
                                android:layout_width="570dp"
                                android:layout_height="20dp"
                                android:background="@drawable/borde_redondo_superior"
                                android:translationZ="10dp">

                                <TextView
                                    android:id="@+id/LblFolio"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="Código"
                                    android:textAlignment="center"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LblFactura"
                                    android:layout_width="280dp"
                                    android:layout_height="wrap_content"
                                    android:text="Descripción"
                                    android:textAlignment="center"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LblOrigen"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="Cantidad"
                                    android:textAlignment="center"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LblCantidad"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="Recibido"
                                    android:textAlignment="center"
                                    android:textSize="14sp" />

                            </TableRow>




                          <ListView
                              android:id="@+id/lista_productos"
                              android:layout_width="match_parent"
                              android:layout_height="270.5dp"
                              android:layout_centerHorizontal="false"
                              android:background="@drawable/borde_redondo_inferior"
                              android:divider="@null"
                              android:dividerHeight="1dp"
                              android:headerDividersEnabled="false"
                              android:textSize="15sp"

                              android:translationY="-0dp"
                              android:translationZ="-10dp" />

                    </LinearLayout>
                </HorizontalScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>








        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ButtonCerrarRecepcion"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart = "20dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:onClick="FinalizarRecepEntrada"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boton_finalizar_pedido" />

    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:onClick="atras"
        android:layout_marginBottom = "40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/boton_regresar" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Edición 1.0.2 – por Gemetytec"
        android:textColor="#607ef5"

        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="05dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>