<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/fondo"
        tools:context=".Menu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/logo_codigounico_b"
             />
        <!-- android:contentDescription="@string/logo"
        " -->

    </LinearLayout>

    <ImageView
        android:id="@+id/ButtonRecepcion"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sombra_pressed_boton_menu"
        android:onClick="RecibirEntrada_Pantalla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/boton_recibir_entrada" />
    <!--  -->

    <ImageView
        android:id="@+id/ButtonUbicar"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/sombra_pressed_boton_menu"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/ButtonRecepcion"
        app:srcCompat="@drawable/boton_ubicar_entrada" />
    <!-- android:onClick="pedidoMayoreo" -->

    <ImageView
        android:id="@+id/ButtonPedidos"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@drawable/sombra_pressed_boton_menu"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonUbicar"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/boton_pedidos" />
    <!-- android:onClick="promos" -->


    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sombra_pressed_boton_atras"
        android:layout_marginEnd="10dp"
        android:onClick="atras"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/boton_regresar" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Edición 1.0.2 – por Gemetytec"
        android:textColor="#607ef5"

        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="05dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>